@model RegisterViewModel
@{
    ViewBag.Title = "Register";
}


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="container">
    <div class="row content">
        <div class="col-md-6 mb-3">
            <img src="imgs/loginpic.jpg" alt="Image in login page">
        </div>
        <div class="col-md-6">
            <h3 class="signin-text mb-3"> Sign In</h3>
            <form method="post" asp-action="Register">
                <div class="form-group mb-2">
                    <label class="col-form-label col-md-2">UserName:</label>
                        <input asp-for="Username" class="form-control" />                 
                    <div class="col">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="col-form-label col-md-2">Password:</label>
                        <input type="password" asp-for="Password" class="form-control" />
                    <div class="col">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="col-form-label">Confirm Password:</label>
                        <input type="password" asp-for="ConfirmPassword"
                               class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Register</button>
                        @* <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a> *@
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

