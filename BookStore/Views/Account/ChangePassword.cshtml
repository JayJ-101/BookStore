@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}



<div asp-validation-summary="ModelOnly" class="text-danger"></div>




<div class="container mt-5">
    <div class="row justify-content-center ">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark">
                    <h2 class="card-title text-center">Change Password</h2>
                </div>
                <div class="card-body bg-white">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form method="post" asp-action="ChangePassword">
                        <div>
                            <div class="form-group mb-3">
                                <input asp-for="UserName" class="form-control" id="floatingInput" readonly>
                            </div>

                            <div class="mb-3">
                                <label asp-for="OldPassword" class="form-label">Password</label>
                                <input asp-for="OldPassword" type="password" class="form-control" autocomplete="off" id="password" placeholder="Enter your password">
                                <div class="col">
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>

                           
                            <div class="mb-3">
                                <label asp-for="NewPassword" class="form-label">New Password</label>
                                <input asp-for="NewPassword" type="password" class="form-control" id="password" placeholder="Enter your password">
                                <div class="col">
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="password" placeholder="Enter your password">
                                <div class="col">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col ">
                                    <button type="submit" class="btn btn-primary">Change Password</button>
                                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

