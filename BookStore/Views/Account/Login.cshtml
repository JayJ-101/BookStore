@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div asp-validation-summary="ModelOnly "  class="text-danger"></div>

<div class="container">
    <div class="row content">
        <div class="col-md-6 mb-3">
            <img src="imgs/loginpic.jpg" alt="Image in login page">
        </div>
        <div class="col-md-6">
            <h3 class="signin-text mb-3"> Sign In</h3>
            <form method="post" asp-action="LogIn" asp-route-returnUrl="@Model.ReturnUrl">
                <div class="form-group mb-2">
                    <label class="col-form-label col-md-2">UserName:</label>
                    <input asp-for="Username" class="form-control" />
                    <div class="col">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group mb-2">
                    <label class="col-form-label col-md-2">Password:</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <div class="col">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>


                <div class="row mb-2">
                    <div class="col">
                        <input type="checkbox" title="Remember Me" asp-for="RememberMe"
                               class="form-check-inline" />
                        <label>Remember Me</label>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Log In</button>
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        Not registered? <a asp-action="Register">Register as a new user</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>